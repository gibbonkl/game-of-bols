<html lang="pt">

<head>
    <meta charset="utf-8">
    <title>Game of Bols</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="../public/css/materialize.css">
    <link rel="stylesheet" type="text/css" href="../public/css/main.css">
    <link rel="stylesheet" type="text/css" href="../public/css/menu.css">
    <link rel="stylesheet" type="text/css" href="../public/css/croppie.css">
    <link rel="stylesheet" type="text/css" href="../public/css/material-icons.css">
    <link rel="stylesheet" type="text/css" href="../public/css/alterar_senha.css">
    <link rel="stylesheet" href="../public/fonts/JTUSjIg1_i6t8kCHKm459Wlhyw.woff2">
</head>

<body class="bg-blue-compass">
    <header>
        <% include ./includes/navbar.ejs %>
    </header>
    <!-- Card editar perfil -->
    <div class="row center alterar-senha-margin-top">
        <div class="col s12 m4 offset-m4">
            <div class="card-panel white z-depth-5">
                <div class="row">
                    <h5 class="blue-compass center mont-serrat margin-bottom">Edite seu perfil</h5>
                    
                    <!-- Imagem -->
                    <div class="row center">
                        <div id="page" class="hide">
                            <div id="main-cropper"></div>
                            <button type="button" class="btn actionCrop">Cortar</button>
                        </div>
                        <div id="resultado">
                            <img id="cad_image" src="../public/img/user.png" class="circle z-depth-1 form-photo" name="photo" value="<%= user.photo%>" />
                            <input type="file" name="upload" id="upload" value="Choose Image" accept="image/*" class="hide">
                        </div>
                    </div>

                    <!-- Senha atual para confirmação -->
                    <div class="input-field col s12">
                        <input id="card_senhaatual" type="password" placeholder=" " class="validate" name="senha" required>
                        <label for="card_senhaatual">Senha Atual</label>
                    </div>
                </div>

                <!-- Confirmar, erros -->                
                <div class="row center">
                    <button class="modal-close btn waves-effect bg-blue-compass rounded" onclick="editaPerfil(event)" >Confirmar</button>
                </div>
                <div class="row">
                    <ul id="erros">
                    </ul>
                </div>
                <!-- -->
            </div>
        </div>
    </div>
</body>
<!-- Ordem de carregamento de script -->
<script type="text/javascript" src="../public/js/libs/jquery.min.js"></script>
<script type="text/javascript" src="../public/js/libs/materialize.js"></script>
<script type="text/javascript" src="../public/js/libs/md5.min.js"></script>
<script type="text/javascript" src="../public/js/menu/menu.js"></script>
<script type="text/javascript" src="../public/js/libs/croppie.min.js"></script>
<script type="text/javascript" src="../public/js/foto/photo.js"></script>
<script type="text/javascript" src="../public/js/editaPerfil/editaPerfil.js"></script>
<!-- Ordem de carregamento de script -->

</html>