<body class="bg-blue-compass">
    <header>
        <% include ./includes/navbar.ejs %>
    </header>
    <!-- Card editar perfil -->
    <div class="row center alterar-senha-margin-top">
        <div class="col s12 m4 offset-m4">
            <form action="/editar_perfil" method="post" enctype="multipart/form-data">
                <div class="card-panel white z-depth-5">
                    <div class="row">
                        <h5 class="blue-compass center mont-serrat margin-bottom">Edite seu perfil</h5>
                        
                        <!-- Imagem -->
                        <div class="row center">
                            <div id="page" class="hide">
                                <div id="main-cropper"></div>
                                <button type="button" class="btn actionCrop">Cortar</button>
                            </div>
                            <div id="resultado">
                                <% if(user.imagem){ %>
                                <img id="cad_image" class="circle z-depth-1 form-photo resize-edit" name="photo" src="../../public/uploads/<%= user.imagem %>"></a>
                                <% } else { %>
                                <img id="cad_image" src="../public/img/user.png" class="circle z-depth-1 form-photo" name="photo" value="<%= user.imagem %>" />
                                <% } %>
                                <input type="file" name="upload" id="upload" value="Choose Image" accept="image/*" class="hide">
                            </div>
                        </div>
    
                        <!-- Senha atual para confirmação -->
                        <div class="input-field col s12">
                            <input id="card_senhaatual" type="password" placeholder=" " class="validate" name="senha" required>
                            <label for="card_senhaatual">Senha Atual</label>
                        </div>
                    </div>

                    <!-- Confirmar, erros -->                
                    <div class="row center">
                        <input class="btn bg-blue-compass rounded" type="submit" value="Confirmar" />
                    </div>
    
                    <div class="row">
                        <ul id="erros">
                        </ul>
                    </div>
                </div>            
            </form>
        </div>
    </div>
</body>
