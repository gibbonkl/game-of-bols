<html lang="pt">

<head>
    <meta charset="utf-8">
    <title>Game of Bols</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="../public/css/materialize.css">
    <link rel="stylesheet" type="text/css" href="../public/css/helpcenter.css">
    <link rel="stylesheet" type="text/css" href="../public/css/menu.css">
    <link rel="stylesheet" type="text/css" href="../public/css/main.css">
    <link rel="stylesheet" type="text/css" href="../public/css/material-icons.css">
    <link rel="stylesheet" href="../public/fonts/JTUSjIg1_i6t8kCHKm459Wlhyw.woff2">
</head>

<body class="bg-blue-compass">
    <header>
        <% include ./includes/navbar.ejs %>
    </header>
    <!-- Botão novo topico aparece ativo apenas se usuário está logado -->
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <div class="row center">
                <a class="waves-effect waves-light btn-large bg-yellow-compass rounded <%if(user.tipo==''){%><%='disabled'%><%}%>" onclick="new_topic()"><i class="left material-icons">add</i>Novo tópico</a>
            </div>
        </div>
    </div>
    <!-- Buscar nos tópicos -->
    <div class="container">
        <div class="row white">
            <div class="input-field col l2 m2 s12">
                <select id="search_select" onchange="searchOp()">
                      <option value="date" selected>Data</option>
                      <option value="username">Nome de usuário</option>
                      <option value="title">Título</option>
                      <option value="tag">Tag</option>                      
                    </select>
                <label>Buscar por:</label>
            </div>
            <div id="div_date" class="input-field input-search col l8 m7 s12">
                <input placeholder=" " name="search_date" type="text" class="datepicker">
                <label for="search_date">Data</label>
            </div>
            <div id="div_username" class="input-field input-search col l8 m7 s12 hide">
                <input placeholder=" " name="search_username" type="text" class="active">
                <label for="search_username">Nome de usuário</label>
            </div>
            <div id="div_title" class="input-field input-search col l8 m7 s12 hide">
                <input placeholder=" " name="search_title" type="text" class="active">
                <label for="search_title">Título</label>
            </div>
            <div id="div_tag" class="chips chips-autocomplete input-search col l8 m7 s12 hide"></div>
            <div class="input-field col l2 m2 s12 center">
                <button class="btn bg-blue-compass btn-margin-filter">buscar</button>
            </div>
        </div>
    </div>
    <!-- Ordenar tópicos -->

    <!-- Tabela de tópicos -->
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12">
                    <div id="list-posts" class="collection mouse-topico">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Paginação -->
    <footer class="page-footer bg-blue-compass">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <ul class="pagination center">
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Ordem de carregamento de script -->
    <script type="text/javascript" src="../public/js/libs/jquery.min.js"></script>
    <script type="text/javascript" src="../public/js/libs/materialize.js"></script>
    <script type="text/javascript" src="../public/js/libs/md5.min.js"></script>
    <script type="text/javascript" src="../public/js/libs/sweetalert2@8.js"></script>
    <script type="text/javascript" src="../public/js/login/inicio.js"></script>
    <script type="text/javascript" src="../public/js/menu/menu.js"></script>
    <script type="text/javascript" src="helper/custom_materialize.js"></script>
    <script type="text/javascript" src="../public/js/helpcenter/helpcenter.js"></script>

    <!-- Ordem de carregamento de script -->


</body>

</html>